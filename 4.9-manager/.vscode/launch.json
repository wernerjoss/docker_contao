{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "stopOnEntry": false,
            "pathMappings": {
                "/var/www/html/": "${workspaceFolder}/contao-data/"
            },
            "ignore": [
                "**/vendor/**/*.php",
                "${env:HOME}/.composer/**/*.php"
            ]
        },
    ]
}